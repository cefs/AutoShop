<!DOCTYPE html>
<html>
<head>
  <title>AutoShop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if user_signed_in? %>
		<b>Autenticado como:</b> <%= current_user.nome %> |
		<%=link_to "Sair", destroy_user_session_path, method: :delete %>
	<% end %>

	<%= yield %>

	<script>
		<%=yield :js %>
	</script>

</body>
</html>
