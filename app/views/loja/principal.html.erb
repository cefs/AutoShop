<p><%=notice %></p>
<p><%=alert %></p>

<% if user_signed_in? %>
	<h1 id="crie_anuncio">Clique e Crie seu Anúncio</h1>
	<%= render "anuncios/form" %>
	<hr />
<% end %>


	<% if @anuncios.size > 0 %>
	<h2>Lista de Anúncios</h2>
		<table>
			<tr>
				<th>Modelo</th>
				<th>Ano</th>
				<th>Valor</th>
				<th>Descrição</th>
				<th></th>
				<th></th>
			</tr>

			<%=render @anuncios %>
		</table>
	<% else %>
		<h3>Não há anúncios cadastrados!</h3>
	<% end %>


	<% content_for :js do %>

		$("#crie_anuncio").css("cursor","pointer");
		$("#new_anuncio").hide();

		$("#crie_anuncio").click(function(){
			$("#new_anuncio").toggle();
		});
	<% end %>
		




